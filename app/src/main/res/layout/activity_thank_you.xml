<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".Fragments.HomeFragment"
    android:paddingBottom="60dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_marginTop="40dp"
        android:text="Thank You."
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:textColor="#312255" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="By submitting your positive result to Covnet you are helping to provide users with potentially life saving information during the COVID-19 pandemic and we thank you for your service."
        android:textSize="20dp"
        android:textColor="#312255"
        tools:ignore="RtlCompat" />

    <ImageButton
        android:id="@+id/isolation"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="210dp"
        app:srcCompat="@drawable/tilepurple"
        android:onClick="onClick"
        android:scaleType="fitXY"
        android:background="@null"
        android:elevation="6dp"
        android:outlineProvider="none"/>

    <TextView
        android:layout_width="305dp"
        android:layout_height="30dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="60dp"
        android:text="Need to Self-isolate?"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="end"
        android:textColor="#312255"
        android:elevation="6dp"
        android:outlineProvider="none"/>

    <TextView
        android:layout_width="305dp"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="60dp"
        android:text="If you have tested positive and need to self-isolate you can get information here."
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="end"
        android:textColor="#312255"
        android:elevation="6dp"
        android:outlineProvider="none"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="440dp"
        android:layout_centerHorizontal="true"
        android:text="Your positive result has been added to the Covnet database and will be used for data visualisations."
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#312255"
        tools:ignore="RtlCompat" />

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="80dp"
        android:text="Home"
        android:id="@+id/btn_home"
        android:textSize="25sp"
        android:onClick="onClick"
        android:background="@drawable/buttondark"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:textColor="#fff"
        android:elevation="5dp"
        android:outlineProvider="none"/>

</RelativeLayout>